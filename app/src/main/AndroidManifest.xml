<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />

    <application
        android:name=".android.App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VChess"
        tools:targetApi="31">
        <activity
            android:name=".android.MainMenuActivity"
            android:exported="false"
            android:label="@string/title_activity_main_menu"
            android:theme="@style/Theme.VChess" />
        <activity
            android:name=".android.ui.layout.EditorActivity"
            android:exported="false"
            android:label="@string/title_activity_editor"
            android:theme="@style/Theme.VChess" />
        <activity
            android:name=".android.lan.JoinGameActivity"
            android:exported="false"
            android:label="@string/title_activity_join_game"
            android:theme="@style/Theme.VChess" />
        <activity
            android:name=".android.lan.HostGameActivity"
            android:exported="false"
            android:label="@string/title_activity_host_game"
            android:theme="@style/Theme.VChess" />
        <activity
            android:name=".android.lan.ScanGamesActivity"
            android:exported="false"
            android:label="@string/title_activity_scan_games"
            android:theme="@style/Theme.VChess" />
        <activity
            android:name=".android.lan.HostGameDialog"
            android:exported="false"
            android:label="@string/title_activity_host_game_dialog"
            android:theme="@style/Theme.VChess" />
        <activity
            android:name=".android.lan.PlayLanActivity"
            android:exported="false"
            android:label="@string/title_activity_play_lan"
            android:theme="@style/Theme.VChess" />
        <activity
            android:name=".android.ui.layout.LocalGameActivity"
            android:exported="false"
            android:label="@string/title_activity_local_game"
            android:theme="@style/Theme.VChess" />
        <activity
            android:name=".android.ui.layout.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.VChess">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>